[MD]
steps                     10000
stepsize                  1.0
temperature               50
bath_coupling             1.0
shake_solvent             on
shake_hydrogens           off
shake_solute              off
lrf                       on

[cut-offs]
solute_solvent            10.0
solute_solute             10.0
solvent_solvent           10.0
q_atom                    99.0
lrf                       99.0

[sphere]
shell_force               10.0
shell_radius              21.2

[solvent]
radial_force              60.0
polarisation              on
polarisation_force        20.0

[intervals]
output                    5
trajectory                100
non_bond                  25

[files]
topology                  prot.top
trajectory                eq2.dcd
restart                   eq1.re
final                     eq2.re